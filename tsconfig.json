{
	"compilerOptions": {
		"baseUrl": ".",
		"incremental": true,
		"composite": true,
		"sourceMap": true,
		"outDir": "./dist/",
		"jsx": "react",
		"allowJs": false,
		"declarationMap": true,
		"declaration": true,
		"noImplicitAny": true,
		"removeComments": true,
		"strictFunctionTypes": true,
		"allowUnreachableCode": false,
		"experimentalDecorators": true,
		"noFallthroughCasesInSwitch": true,
		"allowSyntheticDefaultImports": true,
		// https://github.com/Microsoft/TypeScript/issues/23659
		"strictNullChecks": true,
		"strictPropertyInitialization": true,
		"moduleResolution": "node",

		// mine
		"alwaysStrict": true,


		"lib": ["es5"],        // No need for "es5" if you have "es6"
		"types": ["node"],      // When you code for nodejs
		"target": "es5"
	},
	"files": [],
	"references": [
		{ "path": "./src/hello/tsconfig.json" },
		{ "path": "./src/server/tsconfig.json" }
	]
}
